<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/podcast_episode_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/podcast_episode_title"
                android:textColor="@color/myTextSecondaryColor" />

            <TextView
                android:id="@+id/podcast_episode_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/podcast_episode_description"
                android:textColor="@color/myTextSecondaryColor" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>