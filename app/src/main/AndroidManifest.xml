<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.gvnn.slackcast">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Slackcast">

        <activity
            android:name="it.gvnn.slackcast.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.gvnn.slackcast.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName="it.gvnn.slackcast.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.gvnn.slackcast.MainActivity" />
        </activity>
    </application>

</manifest>
